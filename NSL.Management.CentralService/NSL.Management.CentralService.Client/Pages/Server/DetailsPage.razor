@page "/servers/details/{DetailId:guid}"
@using NSL.Management.CentralService.Shared.Enums

<PageTitle>DetailsPage</PageTitle>

@if (Details == null)
{
    <h3>Loading...</h3>
    return;
}

<h3>@Details.Name</h3>

<hr />

<Tabs>
    <Tab Title="Details">
        <Content>
            <dl>
                <dt>Id</dt>
                <dd>@Details.Id</dd>

                <dt>Name</dt>
                <dd>@Details.Name</dd>

                <dt>Token</dt>
                <dd>@Details.IdentityKey</dd>
            </dl>

        </Content>
    </Tab>
    <Tab Title="Logs" OnClick="LoadLogs">
        <Content>


            <Accordion Class="pt-2">
                <AccordionItem>
                    <TitleTemplate>
                        <Icon Name="IconName.HouseFill" Class="me-1" /> Filter
                    </TitleTemplate>
                    <Content>
                        <div class="mb-3">
                            <label class="form-label">From</label>
                            <input type="datetime-local" @bind="filterFrom" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">To</label>
                            <input type="datetime-local" @bind="filterTo" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Level</label>
                            <select @bind="filterLevel">
                                <option value=""></option>
                                @foreach (var item in Enum.GetValues<LogLevelEnum>())
                                {
                                    <option value="@item.ToString()">@item.ToString()</option>

                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <Button Type="ButtonType.Button" @onclick="_loadLogs">Set</Button>
                            <Button Type="ButtonType.Button" @onclick="clearFilter">Clear</Button>
                        </div>

                    </Content>
                </AccordionItem>
            </Accordion>

            @if (Logs != null)
            {
                <div style="height: 75vh;overflow-y:auto">
                    @if (havePrevLogs)
                    {
                        <Button Style="width:100%" @onclick="logsLoadPrev">Load Prev (100)</Button>
                    }

                    @foreach (var item in Logs)
                    {
                        <p>@item.CreateTime - @item.LogLevel - @item.Content</p>
                    }

                    @if (haveNextLogs && !HaveFilter)
                    {
                        <Button Style="width:100%" @onclick="logsLoadNext">Load Next(@(newLogsCount - logsCount))</Button>
                    }
                </div>
            }
        </Content>
    </Tab>
</Tabs>
